<%= form_for @job do |f| %>
	<p id="job_title">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control'  %>
	</p>

	<p id="job_location">
		<%= f.label :location %>
		<%= f.text_field :location, class: 'form-control'  %>
	</p>

	<p id="job_salary">
		<%= f.label :salary %>
		<%= f.number_field :salary, class: 'form-control'  %>
	</p>

	<div class="form-group">
    <%= f.label :images %>
    <%= f.file_field :images, class: 'form-control'  , multiple: true %>
  </div>

	<div class="row">
		<div class="col-md-6">
			<label for="dateFrom">Start Date</label>
			<%= f.date_field :start_date, type: 'text', id: "newDateFrom", size: "10", placeholder: "dd/mm/yyyy" , class: 'form-control' %>
		</div>

		<div class="col-md-6">
			<label for="dateTo">End Date</label>
			<%= f.date_field :end_date, type: 'text', id: "newDateTo", size: "10", placeholder: "dd/mm/yyyy", class: 'form-control'  %>
		</div>
	</div>

	<p id="job_description">
		<%= f.label :description %>
		<%= f.text_field :description, class: 'form-control job-text'  %>
	</p>

	<div class="row text-center">
		<%= f.button :submit, class: "btn btn-primary" %>
	</div>
<%end%> 