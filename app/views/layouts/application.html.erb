<!DOCTYPE html>
<html class="<%= controller_name %> <%= action_name %>">
<head>
  <title>Livegowork</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <script src="//maps.google.com/maps/api/js?key=AIzaSyCCyM5kxHXe1lRg6tR0iZ8dlxWvVjV7-qQ&libraries=places"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <script src="jquery.geocomplete.js"></script>

  <%= csrf_meta_tags %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">


</head>
<body class="<%= controller_name %> <%= action_name %>">
  <script>
    //var navigation = responsiveNav("#nav");
  </script>
  <header>
  <div id = "show_error" class="font">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
    <%= render "common/nav" %>
  </header>
  <div id="flash">

  </div>


  <%= yield %>

   <div id="chatbox_id<%= current_user.id if signed_in? %>">
      <div class="chatbox">
        <div class="chatboxhead chatboxclose">
          <div class="chatboxtitle">
            <i class="fa fa-comments"></i>
            
            <h1>Chat Bot</h1>
          </div>
          <div class="chatboxoptions">
            <%= link_to "<i class='fa  fa-minus'></i> ".html_safe, "#", class: "toggleChatBox", style: "display:none"  %>
            <%= link_to "<i class='fa  fa-plus'></i> ".html_safe, "#", class: "toggleChatBox" %>
             &nbsp;&nbsp;
          </div>
          <br clear="all"/>
        </div>
        <div class="chatboxcontent">
          <% if @messages && @messages.any? %>
            <%= render @messages %>
          <% end %>
        </div>
        <div class="chatboxinput">
          <%= form_for @message, :remote => true  do |f| %>
              <%= f.text_area :body, class: "chatboxtextarea" %>
              <%= f.hidden_field :status , value: "user" %>
          <% end %>
        </div>
        <%= subscribe_to "/messages/new" %> 
        <%= subscribe_to "/bots/new" %>
      </div> 
    </div>

</body>
</html>
